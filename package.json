{
  "name": "browser-agent-mcp",
  "version": "0.1.0",
  "description": "Chrome extension and MCP server for comprehensive browser automation with AI agents",
  "main": "src/server/index.js",
  "scripts": {
    "build": "npm run build:extension && npm run build:server",
    "build:extension": "webpack --config webpack.config.js",
    "build:server": "tsc --project tsconfig.server.json",
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:server\"",
    "dev:extension": "webpack --config webpack.config.js --watch",
    "dev:server": "tsx watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "chrome-extension",
    "ai-agent"
  ],
  "author": "Ben Smith",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.18.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
